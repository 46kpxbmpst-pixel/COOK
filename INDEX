  <script>
    const cookbookData = {
      categories: [
        "Suppe",
        "Fleisch",
        "Herzhaft",
        "Gem√ºse & Herzhaft",
        "Dessert"
      ],
      recipes: [
        {
          id: "spaghetti-aglio-e-olio",
          title: "Spaghetti Aglio e Olio",
          category: "Herzhaft",
          durationMinutes: 20,
          type: "Pasta",
          tags: ["vegetarisch", "schnell"],
          shortNote: "Geht super schnell, viel Knoblauch!",
          ingredients: [
            "200 g Spaghetti",
            "3 Zehen Knoblauch",
            "3 EL Oliven√∂l",
            "1 Prise Chiliflocken",
            "Salz",
            "Etwas Petersilie, gehackt"
          ],
          steps: [
            "Spaghetti in reichlich Salzwasser al dente kochen.",
            "Knoblauch in feine Scheiben schneiden.",
            "Oliven√∂l in einer Pfanne erhitzen und Knoblauch darin bei mittlerer Hitze leicht anbraten.",
            "Chiliflocken hinzuf√ºgen und kurz mitr√∂sten (nicht zu dunkel werden lassen).",
            "Spaghetti abgie√üen, etwas Kochwasser auffangen und die Nudeln mit dem Knoblauch√∂l mischen.",
            "Mit etwas Nudelwasser cremig machen, mit Petersilie bestreuen und sofort servieren."
          ]
        },
        {
          id: "gemuese-curry",
          title: "Gem√ºse-Curry",
          category: "Gem√ºse & Herzhaft",
          durationMinutes: 40,
          type: "Hauptgericht",
          tags: ["scharf", "vegan"],
          shortNote: "Cremig & scharf.",
          ingredients: [],
          steps: []
        },
        {
          id: "tomatensuppe",
          title: "Tomatensuppe",
          category: "Suppe",
          durationMinutes: 25,
          type: "Suppe",
          tags: ["einfach"],
          shortNote: "Perfekt f√ºr kalte Tage.",
          ingredients: [],
          steps: []
        },
        {
          id: "schokoladenkuchen",
          title: "Schokoladenkuchen",
          category: "Dessert",
          durationMinutes: 70,
          type: "Dessert",
          tags: ["backen"],
          shortNote: "Innen sch√∂n saftig.",
          ingredients: [],
          steps: []
        }
      ]
    };

    function openRecipeDetail(recipe) {
      const backdrop = document.getElementById("detailBackdrop");
      const titleEl = document.getElementById("detailTitle");
      const metaEl = document.getElementById("detailMeta");
      const noteEl = document.getElementById("detailNote");
      const ingredientsEl = document.getElementById("detailIngredients");
      const stepsEl = document.getElementById("detailSteps");

      if (!backdrop || !titleEl || !metaEl || !noteEl || !ingredientsEl || !stepsEl) return;

      const tagsText = recipe.tags && recipe.tags.length
        ? " ¬∑ " + recipe.tags.join(", ")
        : "";

      titleEl.textContent = recipe.title;
      metaEl.textContent = `${recipe.durationMinutes} Min ¬∑ ${recipe.type}${tagsText}`;
      noteEl.textContent = recipe.shortNote || "";

      ingredientsEl.innerHTML = "";
      if (recipe.ingredients && recipe.ingredients.length) {
        recipe.ingredients.forEach((item) => {
          const li = document.createElement("li");
          li.textContent = item;
          ingredientsEl.appendChild(li);
        });
      } else {
        const li = document.createElement("li");
        li.textContent = "Keine Zutaten hinterlegt.";
        ingredientsEl.appendChild(li);
      }

      stepsEl.innerHTML = "";
      if (recipe.steps && recipe.steps.length) {
        recipe.steps.forEach((step) => {
          const li = document.createElement("li");
          li.textContent = step;
          stepsEl.appendChild(li);
        });
      } else {
        const li = document.createElement("li");
        li.textContent = "Keine Zubereitungsschritte hinterlegt.";
        stepsEl.appendChild(li);
      }

      backdrop.style.display = "flex";
    }

    function closeRecipeDetail() {
      const backdrop = document.getElementById("detailBackdrop");
      if (!backdrop) return;
      backdrop.style.display = "none";
    }

    function createRecipeCard(recipe, isLarge) {
      const card = document.createElement("article");
      card.className = "recipe-card" + (isLarge ? " large" : "");

      const tagsText = recipe.tags && recipe.tags.length
        ? " ¬∑ " + recipe.tags.join(", ")
        : "";

      card.innerHTML = `
        <h2 class="recipe-title">${recipe.title}</h2>
        <p class="recipe-meta">${recipe.durationMinutes} Min ¬∑ ${recipe.type}${tagsText}</p>
        <p class="recipe-note">${recipe.shortNote || ""}</p>
      `;

      card.addEventListener("click", () => openRecipeDetail(recipe));

      return card;
    }

    function renderRecipes(filterCategory) {
      const featuredContainer = document.getElementById("featuredRecipe");
      const gridContainer = document.getElementById("recipeGrid");

      if (!featuredContainer || !gridContainer) return;

      let recipes = cookbookData.recipes.slice();
      if (filterCategory) {
        recipes = recipes.filter((r) => r.category === filterCategory);
      }

      featuredContainer.innerHTML = "";
      gridContainer.innerHTML = "";

      if (!recipes.length) {
        featuredContainer.innerHTML = '<p class="recipe-note">Keine Rezepte in dieser Kategorie.</p>';
        return;
      }

      const [first, ...rest] = recipes;
      featuredContainer.appendChild(createRecipeCard(first, true));
      rest.forEach((recipe) => {
        gridContainer.appendChild(createRecipeCard(recipe, false));
      });
    }

    function renderChips() {
      const chipsRow = document.getElementById("chipsRow");
      if (!chipsRow) return;

      chipsRow.innerHTML = "";

      // "Alle" Chip einf√ºgen
      const allBtn = document.createElement("button");
      allBtn.className = "chip active";
      allBtn.textContent = "Alle";
      allBtn.addEventListener("click", () => {
        document.querySelectorAll(".chip").forEach((chip) =>
          chip.classList.remove("active")
        );
        allBtn.classList.add("active");
        renderRecipes(null);
      });
      chipsRow.appendChild(allBtn);

      // Restliche Kategorie-Chips
      cookbookData.categories.forEach((category) => {
        const btn = document.createElement("button");
        btn.className = "chip";
        btn.textContent = category;

        btn.addEventListener("click", () => {
          document.querySelectorAll(".chip").forEach((chip) =>
            chip.classList.remove("active")
          );
          btn.classList.add("active");
          renderRecipes(category);
        });

        chipsRow.appendChild(btn);
      });
    }

    document.addEventListener("DOMContentLoaded", () => {
      renderChips();
      renderRecipes(null);

      const backdrop = document.getElementById("detailBackdrop");
      const closeBtn = document.getElementById("detailClose");

      if (closeBtn) {
        closeBtn.addEventListener("click", () => {
          closeRecipeDetail();
        });
      }

      if (backdrop) {
        backdrop.addEventListener("click", (event) => {
          if (event.target === backdrop) {
            closeRecipeDetail();
          }
        });
      }
    });
  </script>
</body>
